<Window x:Class="Yacht_club.Main_Yacht_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yacht_club"
        mc:Ignorable="d"
        Title="Yacht Club GAMF" Height="700" Width="1100" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215"/>
            <ColumnDefinition Width="585*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="125"/>
            <RowDefinition Height="332*"/>
        </Grid.RowDefinitions>
        <Menu x:Name="menu" Grid.Row="0" Grid.ColumnSpan="2" Background="#2D3446" FontFamily="Segoe UI Semibold" Foreground="#FFACB5B9" FontSize="14">
            <MenuItem x:Name="miFoold" Header="Főmenü" Style="{DynamicResource MenuItems}" Click="miFoold_Click"/>
            <MenuItem x:Name="miFelhasznalo" Header="Felhasználó" Style="{DynamicResource MenuItems}"/>
            <MenuItem x:Name="miYachts" Header="Yachtok" Style="{DynamicResource MenuItems}">
                <MenuItem x:Name="miYachtAdd"  Header="Hozzáadás" Style="{DynamicResource MenuItems_2}"/>
                <MenuItem x:Name="miYachtRemove" Header="Törlés" Style="{DynamicResource MenuItems_2}"/>
            </MenuItem>
            <MenuItem x:Name="miErtesitesek" Header="Értesítések" Style="{DynamicResource MenuItems}"/>
            <MenuItem x:Name="miInfo" Header="Információk" Style="{DynamicResource MenuItems}">
                <MenuItem x:Name="miKeszito" Header="Készítők" Style="{DynamicResource MenuItems_2}"/>
                <MenuItem x:Name="miValami" Header="Valami" Style="{DynamicResource MenuItems_2}"/>
            </MenuItem>
            <MenuItem x:Name="miKijelentkezes" Header="Kijelentkezés" Style="{DynamicResource MenuItems}"/>
            <MenuItem x:Name="miKilepes" Header="Kilépés" Style="{DynamicResource MenuItems}"/>
        </Menu>
        <StackPanel x:Name="stLogin" Height="125" Grid.Row="1" Grid.Column="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="215" Height="35">
                    <Label  Content="Felhasználónév:" Width="85" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold"/>
                    <TextBox x:Name="tbLoginName" Width="125" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="22" Panel.ZIndex="-2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="215" Height="35">
                    <Label Content="Jelszó:" Width="85" FontSize="10" HorizontalAlignment="left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <PasswordBox x:Name="pbPasswd" Width="125" PasswordChar="*" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Width="215" Height="40" HorizontalAlignment="Center">
                    <Button x:Name="btBelepes" Content="Bejelentkezés" Width="150" Height="23" FontSize="12" Margin="32,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <ContentControl x:Name="ccWindow_1" TabIndex="1" Content="{Binding}" Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <ContentControl x:Name="ccWindow_2" TabIndex="2" Content="{Binding}" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <ContentControl x:Name="ccWindow_3" TabIndex="3" Content="{Binding}" Grid.RowSpan="2" Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
