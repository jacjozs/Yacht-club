        </Setter>
    </Style>

    <Style x:Key="TextBoxLogStyle" TargetType="TextBox">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CaretBrush" Value="#FF1D212C"/>
        <Setter Property="Foreground" Value="#FF1D212C"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBoxBase}">
                    <Border Name="Border" CornerRadius="2" Padding="0" Background="White" BorderBrush="#FFACB5B9" BorderThickness="2" >
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PassBoxLogStyle" TargetType="PasswordBox">
        <Setter Property="FontWeight" Value="Bold"/>
