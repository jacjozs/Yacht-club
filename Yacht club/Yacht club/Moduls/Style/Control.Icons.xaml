            <DataTrigger Value="True" Binding="{Binding icon_black}">
                <Setter Property="Source" Value="..\..\images\black\home.png"/>
            </DataTrigger>
            <DataTrigger Value="False" Binding="{Binding icon_black}">
                <Setter Property="Source" Value="..\..\images\white\home.png"/>
