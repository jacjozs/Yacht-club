            <Label Style="{DynamicResource MenuDecLabel}" Content="Elerhetőség:" Margin="0 10 0 0" FontWeight="Medium" Foreground="{Binding betu_szin}"/>
            <Label Style="{DynamicResource MenuDecLabel}" Content="Cím: Budapest, Kossuth Lajos tér 1-3, 1055" Margin="20 10 0 0" Foreground="{Binding betu_szin}"/>
            <Label Style="{DynamicResource MenuDecLabel}" Content="Telefon: (70) 700 7557" Margin="20 10 0 0" Foreground="{Binding betu_szin}"/>
            <Label Style="{DynamicResource MenuDecLabel}" Content="Készítők: " Margin="0 10 0 0" FontWeight="Medium" Foreground="{Binding betu_szin}"/>
            <Label Style="{DynamicResource MenuDecLabel}" Content="Jaczina József (FGYJR3)" Margin="20 10 0 0" Foreground="{Binding betu_szin}"/>
            <Label Style="{DynamicResource MenuDecLabel}" Content="Kiss József Benjamin (WD3TMY)" Margin="20 10 0 0" Foreground="{Binding betu_szin}"/>
            <Label Style="{DynamicResource MenuDecLabel}" Content="Kugelman Zoltán (XCE51B)" Margin="20 10 0 0" Foreground="{Binding betu_szin}"/>
            <Label Style="{DynamicResource MenuDecLabel}" Content="Makkos András (L3LASH)" Margin="20 10 0 0" Foreground="{Binding betu_szin}"/>
        </StackPanel>

    </Grid>
</UserControl>
