<UserControl x:Class="Yacht_club.UsingControls.ucYachtok"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yacht_club.UsingControls"
             mc:Ignorable="d" 
             d:DesignHeight="334" d:DesignWidth="553">
    <Grid Background="#FF1D212C">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="309"/>
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource MenuDecLabel}" Content="Yachtok:" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Grid.Column="0" Grid.Row="0"/>
        <ListView x:Name="listView" Height="309" Width="585" Grid.Row="1" Grid.Column="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="110.5"/>
                    <GridViewColumn Header="Bérlő" Width="110.5"/>
                    <GridViewColumn Header="Férőhely" Width="110.5"/>
                    <GridViewColumn Header="Foglalt?" Width="110.5"/>
                    <GridViewColumn Header="Adatok" Width="110.5">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btYacht_adat" Content="Megtekintés" HorizontalAlignment="Center" Width="75"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
